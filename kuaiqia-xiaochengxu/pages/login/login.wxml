<!--pages/login/login.wxml-->
<view class="LoginPage">
    <view class='LoginHeader D-Flex'>
        <view>
            <text data-type='login' class="{{type == 'login' ? 'IsActive' : ''}}" bindtap="handleClick">密码登录</text>
            <text>丨</text>
            <text data-type='code' class="{{type == 'code' ? 'IsActive' : ''}}" bindtap="handleClick">验证码登录</text>
        </view>
        <image bindtap="handleBack" alt="" src="../../assets/images/arrow_right.png"></image>
    </view>
    <view class="LoginByPas" hidden="{{type != 'login'}}">
        <view class="LoginTitle">用户名</view>
        <view class="LoginInput">
            <input value="{{user}}" bindinput="getUser" placeholder="请输入您的用户名"></input>
        </view>
        <view class="LoginTitle">密码</view>
        <view class="LoginInput">
            <input value="{{upwd}}" bindinput="getUpwd" type="password" placeholder="请输入您的密码"></input>
        </view>
        <button bindtap="handleLogin" disabled="{{user && upwd ? false : true}}" class="LoginBtn {{user && upwd ? 'IsActive' : ''}}">登录</button>
        <view class="LoginBottom D-Flex">
            <navigator>忘记密码？</navigator>
            <view class="D-Flex">还没有账号？<navigator>立即注册</navigator></view>
        </view>
    </view>
    <view class="LoginByCode" hidden="{{type != 'code'}}">
        <view class="LoginTitle">用户名</view>
        <view class="LoginInput D-Flex">
            <input value="{{user}}" bindinput="getUser" placeholder="请输入您的用户名"></input>
        </view>
        <view class="LoginTitle">验证码</view>
        <view class="LoginInput D-Flex">
            <input value="{{code}}" bindinput="getCode" type="number" maxlength='6' placeholder="请输入六位数验证码"></input>
            <button class="LoginCodeBtn">获取验证码</button>
        </view>
        <button bindtap="handleLogin" disabled="{{user && code ? false : true}}" class="LoginBtn {{code && user ? 'IsActive' : ''}}">登录</button>
    </view>

</view>
