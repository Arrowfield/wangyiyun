/* pages/login/login.wxss */
.LoginPage{
    position:absolute;
    background-color:#20272F;
    color:#9B9895;
    overflow:scroll;
    padding:140rpx 30rpx 0;
    width:100%;
    height:100%;
    box-sizing:border-box;
}

.LoginHeader image{width:30rpx;height:30rpx;}
.LoginHeader {padding-bottom:80rpx;justify-content:space-between;font-size:52rpx;}
.LoginHeader .IsActive{color:#B2B9CA;}
.LoginTitle{padding-bottom:60rpx;color:#B2B9CA;}
.LoginInput{margin-bottom:40rpx;height:88rpx;line-height:88rpx;border-bottom:1px solid #2F3741;}

.LoginBtn{height:108rpx;border-radius:54rpx;line-height:108rpx;}

.LoginBottom{margin-top:62rpx;justify-content:space-between;font-size:24rpx;}
.LoginBottom navigator{color:#F6CF79;}

.LoginBtn.IsActive{color:white;background:linear-gradient(226deg,rgba(216,177,134,1) 0%,rgba(193,153,99,1) 100%);}

.LoginByCode .LoginInput{height:128rpx;justify-content:space-between;}
.LoginCodeBtn{color:white;background:#33353E;height:108rpx;width:280rpx;text-align:center;line-height:108rpx;border-radius:54rpx;}